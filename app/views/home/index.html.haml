.row-fluid 
  .span3 
    %h1 
      = link_to "One Sec", root_path
  - if current_user
    .span9
      = form_tag(search_path, method: :post) do 
        = text_field_tag :tag, "search by sprinkle"
        = submit_tag "Search"

- if current_user 
  .row-fluid
    .span6
      %h3 
        = link_to "My Moments", seconds_path
      - @seconds.each do |second|
        = render 'home/second', second: second
    .span6
      %h3 
        = link_to "My Cakes", cakes_path
      - @cakes.each do |cake|
        = render 'home/cake', cake:cake

-else
  %h3 
    Please 
    = link_to "sign in", new_user_session_path
    or
    = link_to "sign up.", new_user_registration_path
  = image_tag("unicorn_cake.jpg", alt: "unicon cake!!!")