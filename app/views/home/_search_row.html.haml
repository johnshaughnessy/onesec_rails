.row.search_row
  .span4
    %h1
      .rainbow.sprinkles_header
        = link_to "SPRINKLES", root_path
  - if current_user
    .span5.offset2
      .wide_form
        = form_tag(search_path, method: :post) do 
          %input#tag{name:"tag", type:"text", placeholder:"search by sprinkle"}
          .search_button
            %input{name:"commit", type:"image", src:image_path('search-icon.png') }
            / = submit_tag "Search"
    .span1
      .bottom
        .sign_out
          = link_to 'Sign Out', destroy_user_session_path, :method=>'delete'