.row-fluid.search_row
  .span3
    %h1
      .rainbow
        = link_to "Sprinkles", root_path
  - if current_user
    .span9
      .wide_form
        = form_tag(search_path, method: :post) do 
          = text_field_tag :tag, "search by sprinkle"
          .search_button
            = submit_tag "Search"